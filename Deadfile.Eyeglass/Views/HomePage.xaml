<local:NavigationAwarePage
    x:Class="Deadfile.Eyeglass.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Deadfile.Eyeglass.Views"
    xmlns:prism="using:Prism.Windows.Mvvm"
    prism:ViewModelLocator.AutoWireViewModel="True"
    xmlns:designtime="using:Deadfile.Eyeglass.DesignTime"
    mc:Ignorable="d">

    <d:Page.Datacontext>
        <designtime:HomePageViewModel />
    </d:Page.Datacontext>

    <Hub Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Header="{Binding Title}">
    </Hub>
</local:NavigationAwarePage>
